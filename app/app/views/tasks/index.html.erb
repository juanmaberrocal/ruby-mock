<h1>Tasks</h1>

<% if notice.present? %>
  <p id="notice" class="bg-info"><%= notice %></p>
<%end%>

<table class="table tabel-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Path</th>
      <th>Start</th>
      <th>End</th>
      <th>Server</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.exc_path %></td>
        <td><%= task.start_datetime %></td>
        <td><%= task.end_datetime %></td>
        <td><%= task.server_key %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-link' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-link' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: 'btn btn-default' %>
