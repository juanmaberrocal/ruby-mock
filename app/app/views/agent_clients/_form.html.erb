<%= form_for @agent_client, html: { class: 'form-horizontal' } do |f| %>
  <% if @agent_client.errors.any? %>
    <div id="error_explanation" class="bg-danger">
      <strong><%= pluralize(@agent_client.errors.count, "error") %> prohibited this agent client from being saved:</strong>

      <ul>
      <% @agent_client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= label_tag :name, 'Name:', class: 'col-xs-2 control-label' %>
        <div class="col-xs-10"><%= f.text_field :name, class: 'form-control', required: true %></div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= label_tag :server_key, 'Server Key:', class: 'col-xs-2 control-label' %>
        <div class="col-xs-10"><%= f.text_field :server_key, class: 'form-control', required: true %></div>
      </div>
    </div>
  </div>  


  <div class="actions">
    <%= f.submit "#{(params[:action] == 'new' ? "Create" : "Update")} Client Agent" , class: 'btn btn-primary' %>
  </div>
<% end %>
